// Quiz State
let currentQuestionIndex = 0;
let score = 0;
let username = '';
let timerInterval = null;
let timeRemaining = 600; // 10 minutes in seconds
let startTime = 0;
let userAnswers = new Array(quizQuestions.length).fill(null);
let visitedQuestions = new Array(quizQuestions.length).fill(false);

// jQuery Document Ready
$(document).ready(function() {
    // Login Form Submit
    $('#loginForm').on('submit', function(e) {
        e.preventDefault();
        handleLogin();
    });

    // Previous Button
    $('#prevBtn').on('click', function() {
        goToPreviousQuestion();
    });

    // Submit Button
    $('#submitBtn').on('click', function() {
        submitAnswer();
    });

    // Next Button
    $('#nextBtn').on('click', function() {
        goToNextQuestion();
    });

    // Finish Quiz Button
    $('#finishQuizBtn').on('click', function() {
        if (confirm('Are you sure you want to finish the quiz?')) {
            finishQuiz();
        }
    });

    // Restart Button
    $('#restartBtn').on('click', function() {
        restartQuiz();
    });
});

// Handle Login
function handleLogin() {
    const usernameInput = $('#username').val().trim();
    const passwordInput = $('#password').val().trim();
    
    if (usernameInput && passwordInput) {
        username = usernameInput;
        $('#displayUsername').text(username);
        startQuiz();
    }
}

// Start Quiz
function startQuiz() {
    $('#loginScreen').hide();
    $('#progressSection').show();
    $('#quizBody').show();
    $('#questionPalette').show();
    
    currentQuestionIndex = 0;
    score = 0;
    timeRemaining = 600;
    userAnswers = new Array(quizQuestions.length).fill(null);
    visitedQuestions = new Array(quizQuestions.length).fill(false);
    
    $('#totalQuestions').text(quizQuestions.length);
    
    createPaletteButtons();
    startTimer();
    loadQuestion();
}

// Create Palette Buttons
function createPaletteButtons() {
    $('#paletteGrid').empty();
    
    for (let i = 0; i < quizQuestions.length; i++) {
        const btn = $('<button>')
            .addClass('palette-btn')
            .attr('data-question', i)
            .text(i + 1)
            .on('click', function() {
                jumpToQuestion(i);
            });
        
        $('#paletteGrid').append(btn);
    }
}

// Update Palette
function updatePalette() {
    $('.palette-btn').each(function(index) {
        $(this).removeClass('current answered visited');
        
        if (index === currentQuestionIndex) {
            $(this).addClass('current');
        } else if (userAnswers[index] !== null) {
            $(this).addClass('answered');
        } else if (visitedQuestions[index]) {
            $(this).addClass('visited');
        }
    });
    
    updatePaletteSummary();
}

// Update Palette Summary
function updatePaletteSummary() {
    const answered = userAnswers.filter(ans => ans !== null).length;
    const visited = visitedQuestions.filter((v, i) => v && userAnswers[i] === null).length;
    const notVisited = quizQuestions.length - answered - visited;
    
    $('#answeredCount').text(answered);
    $('#notAnsweredCount').text(visited);
    $('#notVisitedCount').text(notVisited);
}

// Jump to Question
function jumpToQuestion(index) {
    if (index >= 0 && index < quizQuestions.length) {
        currentQuestionIndex = index;
        loadQuestion();
    }
}

// Timer Function
function startTimer() {
    updateTimerDisplay();
    
    timerInterval = setInterval(function() {
        timeRemaining--;
        updateTimerDisplay();
        
        if (timeRemaining <= 60) {
            $('#timerDisplay').addClass('warning');
        }
        
        if (timeRemaining <= 0) {
            clearInterval(timerInterval);
            finishQuiz();
        }
    }, 1000);
}

function updateTimerDisplay() {
    const minutes = Math.floor(timeRemaining / 60);
    const seconds = timeRemaining % 60;
    $('#timer').text(`${minutes}:${seconds.toString().padStart(2, '0')}`);
}

// Load Question
function loadQuestion() {
    const question = quizQuestions[currentQuestionIndex];
    
    visitedQuestions[currentQuestionIndex] = true;
    
    $('#questionText').text(question.question);
    $('#optionsContainer').empty();
    $('#submitBtn').prop('disabled', userAnswers[currentQuestionIndex] === null);
    $('#feedbackMessage').hide();
    
    $('#currentQuestion').text(currentQuestionIndex + 1);
    updateProgressBar();
    updatePalette();
    
    // Update navigation buttons
    $('#prevBtn').prop('disabled', currentQuestionIndex === 0);
    $('#nextBtn').prop('disabled', currentQuestionIndex === quizQuestions.length - 1);
    
    const letters = ['A', 'B', 'C', 'D'];
    
    question.options.forEach(function(option, index) {
        const btn = $('<button>')
            .addClass('option-btn')
            .html(`
                <span class="option-letter">${letters[index]}</span>
                <span>${option}</span>
            `)
            .on('click', function() {
                selectOption(index);
            });
        
        if (userAnswers[currentQuestionIndex] === index) {
            btn.addClass('selected');
        }
        
        $('#optionsContainer').append(btn);
    });
}

// Select Option
function selectOption(index) {
    userAnswers[currentQuestionIndex] = index;
    
    $('.option-btn').removeClass('selected');
    $('.option-btn').eq(index).addClass('selected');
    
    $('#submitBtn').prop('disabled', false);
    updatePalette();
}

// Submit Answer
function submitAnswer() {
    if (userAnswers[currentQuestionIndex] === null) return;
    
    const question = quizQuestions[currentQuestionIndex];
    const userAnswer = userAnswers[currentQuestionIndex];
    
    $('.option-btn').prop('disabled', true);
    $('#submitBtn').prop('disabled', true);
    
    $('.option-btn').each(function(index) {
        if (index === question.correct) {
            $(this).addClass('correct');
        } else if (index === userAnswer && index !== question.correct) {
            $(this).addClass('incorrect');
        }
    });
    
    $('#feedbackMessage').show();
    
    if (userAnswer === question.correct) {
        score++;
        $('#currentScore').text(score);
        $('#feedbackMessage')
            .removeClass('incorrect')
            .addClass('correct')
            .html('<i class="bi bi-check-circle-fill"></i> Correct Answer! Well done!');
    } else {
        $('#feedbackMessage')
            .removeClass('correct')
            .addClass('incorrect')
            .html('<i class="bi bi-x-circle-fill"></i> Incorrect! The correct answer is highlighted in green.');
    }
    
    setTimeout(function() {
        if (currentQuestionIndex < quizQuestions.length - 1) {
            goToNextQuestion();
        }
    }, 2000);
}

// Navigation Functions
function goToPreviousQuestion() {
    if (currentQuestionIndex > 0) {
        currentQuestionIndex--;
        loadQuestion();
    }
}

function goToNextQuestion() {
    if (currentQuestionIndex < quizQuestions.length - 1) {
        currentQuestionIndex++;
        loadQuestion();
    }
}

// Update Progress Bar
function updateProgressBar() {
    const progress = ((currentQuestionIndex + 1) / quizQuestions.length) * 100;
    $('#progressBar').css('width', progress + '%');
}

// Finish Quiz
function finishQuiz() {
    clearInterval(timerInterval);
    showResults();
}

// Show Results
function showResults() {
    $('#progressSection').hide();
    $('#quizBody').hide();
    $('#questionPalette').hide();
    $('#resultsScreen').show();
    
    // Calculate score
    score = 0;
    userAnswers.forEach(function(answer, index) {
        if (answer === quizQuestions[index].correct) {
            score++;
        }
    });
    
    const percentage = Math.round((score / quizQuestions.length) * 100);
    const timeTaken = 600 - timeRemaining;
    const minutesTaken = Math.floor(timeTaken / 60);
    const secondsTaken = timeTaken % 60;
    
    $('#resultUsername').text(username);
    $('#finalScore').text(score);
    $('#finalTotal').text(quizQuestions.length);
    $('#correctAnswers').text(score);
    $('#incorrectAnswers').text(quizQuestions.length - score);
    $('#percentageScore').text(percentage + '%');
    $('#timeTaken').text(`${minutesTaken}:${secondsTaken.toString().padStart(2, '0')}`);
    
    let message = '';
    if (percentage === 100) {
        message = 'ðŸŽ‰ Perfect Score! You\'re a tech genius!';
    } else if (percentage >= 80) {
        message = 'ðŸŒŸ Excellent work! You really know your stuff!';
    } else if (percentage >= 60) {
        message = 'ðŸ‘ Good job! Keep learning and improving!';
    } else if (percentage >= 40) {
        message = 'ðŸ“š Not bad! A bit more practice will help!';
    } else {
        message = 'ðŸ’ª Keep trying! Everyone starts somewhere!';
    }
    
    $('#performanceMessage').text(message);
}

// Restart Quiz
function restartQuiz() {
    $('#resultsScreen').hide();
    $('#loginScreen').show();
    $('#questionPalette').hide();
    
    currentQuestionIndex = 0;
    score = 0;
    timeRemaining = 600;
    userAnswers = new Array(quizQuestions.length).fill(null);
    visitedQuestions = new Array(quizQuestions.length).fill(false);
    
    $('#username').val('');
    $('#password').val('');
    $('#currentScore').text(0);
    
    if (timerInterval) {
        clearInterval(timerInterval);
    }
    
    $('#timerDisplay').removeClass('warning');
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
